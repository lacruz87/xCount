<p id="notice"><%= notice %></p>

<h1>Arecursos</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Acentro</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arecursos.each do |arecurso| %>
      <tr>
        <td><%= arecurso.acentro.nombre %></td>
        <td><%= arecurso.nombre %></td>
        <td><%= link_to 'Show', arecurso %></td>
        <td><%= link_to 'Edit', edit_arecurso_path(arecurso) %></td>
        <td><%= link_to 'Destroy', arecurso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

