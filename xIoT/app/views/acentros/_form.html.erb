<%= form_with(model: acentro, local: true) do |form| %>
  <% if acentro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(acentro.errors.count, "error") %> prohibited this acentro from being saved:</h2>

      <ul>
