    <%= form.label :direccion %>
    <%= form.text_field :direccion, id: :acentro_direccion %>
  </div>

  <div class="field">
    <%= form.label :numero %>
    <%= form.number_field :numero, id: :acentro_numero %>
  </div>

  <div class="field">
    <%= form.label :comuna %>
    <%= form.text_field :comuna, id: :acentro_comuna %>
  </div>

